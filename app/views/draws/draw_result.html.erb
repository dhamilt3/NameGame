<h1>Draw Result for <%=session.fetch("draw_number")%></h1>

<div>
  Your Answer: <%=@response%>
</div>

<div>
  Correct Answer: <%=@draw_solution%>
</div>

<div>
  <%if @response.downcase == @draw_solution.downcase%>
    <%= @result = 1 %> Correct
  <%else%>
    <%= @result = 0 %> Sorry, your answer was incorrect
  <%end%>
</div>

<form>
 
</form>


<hr>

<div>
<% if session.fetch("draw_number") == nil%>
    <form action="/new_draw">
      <input name="draw_present" value=1>
      <input name="draw_response" value ="<%=@response%>">
      <input name="draw_id" value=<%=session.fetch("draw_id")%>>
      <button>Continue</button>
    </form>
<%elsif session.fetch("draw_number") <5%>
    <form action="/new_draw">
       <input name="draw_present" value=1>
       <input name="draw_response" value ="<%=@response%>">
      <input name="draw_id" value=<%=session.fetch("draw_id")%>>
      <button>Continue</button>
    </form>
<%else%>
    <form action="/view_play_result">
       <input name="draw_present" value=1>
       <input name="draw_response" value ="<%=@response%>">
       <input name="draw_id" value=<%=session.fetch("draw_id")%>>
      <button>Continue</button>
    </form>
<%end%>
<%session.store(:draw_result, @result)%>
</div>

  